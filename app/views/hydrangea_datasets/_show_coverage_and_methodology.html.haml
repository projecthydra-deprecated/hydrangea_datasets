%dl  
  - unless get_values_from_datastream(@document_fedora,"HydraDataset", :interval).first.empty?
    %dt
      = fedora_field_label("descMetadata", [:data_type], "Data Collection")  
    %dd.multi_inline.completeness
      = get_values_from_datastream(@document_fedora, "HydraDataset", :completeness)
      = get_values_from_datastream(@document_fedora,"HydraDataset", :interval)
  
  - unless get_values_from_datastream(@document_fedora,"HydraDataset", :data_type).first.empty?
    %dt
      = fedora_field_label("HydraDataset", :data_type, "Type:")
    %dd.data_type
      = get_values_from_datastream(@document_fedora, "HydraDataset", :data_type)

  - unless (get_values_from_datastream(@document_fedora,"HydraDataset", :timespan_start).first.empty? || get_values_from_datastream(@document_fedora,"HydraDataset", :timespan_end).first.empty?)
    %dt
      %label Timespan
    %dd.multi_inline.timespan
      %ul
      - unless get_values_from_datastream(@document_fedora,"HydraDataset", :timespan_start).first.empty?
        %li.timespan_start
          = fedora_field_label("HydraDataset", :timespan_start, "Start")
          = get_values_from_datastream(@document_fedora,"HydraDataset", :timespan_start)
      
      - unless get_values_from_datastream(@document_fedora,"HydraDataset", :timespan_end).first.empty?
        %li.timespan_end
          = fedora_field_label("HydraDataset", :timespan_end, "End")
          = get_values_from_datastream(@document_fedora,"HydraDataset", :timespan_end)     
  
  - unless get_values_from_datastream(@document_fedora,"HydraDataset", :gps).first.empty?
    %dt
      = fedora_field_label("HydraDataset", :gps, "GPS Coordinates")
    %dd.gps
      = get_values_from_datastream(@document_fedora,"HydraDataset", :gps)

  - unless get_values_from_datastream(@document_fedora,"HydraDataset", :region).first.empty?
    %dt
      = fedora_field_label("HydraDataset", :region, "Region")
    %dd.region
      = get_values_from_datastream(@document_fedora,"HydraDataset", :region)    
       
  - unless get_values_from_datastream(@document_fedora,"HydraDataset", :site).first.empty?
    %dt
      = fedora_field_label("HydraDataset", :site, "Site")
    %dd.site
      = get_values_from_datastream(@document_fedora,"HydraDataset", :site)    
       
  - unless get_values_from_datastream(@document_fedora,"HydraDataset", :ecosystem).first.empty?
    %dt
      = fedora_field_label("HydraDataset", :ecosystem, "Ecosystem Type")
    %dd.ecosystem
      = get_values_from_datastream(@document_fedora,"HydraDataset", :ecoysystem)