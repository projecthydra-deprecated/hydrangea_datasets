
<% grant = edit_grant %>
<% grant_counter = edit_grant_counter %>

<% base_id = "grant_#{grant_counter}" %>
<ul id="<%= base_id %>">
  <li class="grant_agency">
    <%= fedora_field_label("hydraDataset", [{:grant=>grant_counter}, :organization], "Granting agency") %>
    <%= fedora_text_field(@document_fedora, "hydraDataset", [{:grant=>grant_counter}, :organization], :multiple=>false) %>
  </li>

  <li class="grant_number">
    <%= fedora_field_label("hydraDataset", [{:grant=>grant_counter}, :number], "Grant number") %>
    <%= fedora_text_field(@document_fedora, "hydraDataset", [{:grant=>grant_counter}, :number], :multiple=>false) %>
  </li>
</ul>
